#version 450

layout(local_size_x_id = 0, local_size_y_id = 1, local_size_z_id = 2) in;

layout(std430, binding = 0) buffer InBuffer { float a[]; };
layout(std430, binding = 1) buffer OutBuffer { float b[]; };

void main() {
    uint idx = gl_GlobalInvocationID.x;
    if (idx < a.length()) {
        b[idx] = max(0.0, a[idx]);
    }
}
